<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Webeteer" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
    </style>

    <style name="Theme.Webeteer" parent="Base.Theme.Webeteer" />

    <style name="MyThemeOverlay_Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <!-- color used by navigation icon and overflow icon -->
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="StyleScoreCardHeader" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/text_card_table_header</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="StylePlayerName" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/text_player_name</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">start</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="StyleScoreTotal" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="android:textSize">17sp</item>
    </style>
</resources>